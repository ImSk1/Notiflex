@using Notiflex.Core.Models.HomePageModels;
@model List<IndexModel>
@{
    ViewData["Title"] = "Home Page";
    string value = "";
}
<script src="~/js/weathercard.js"></script>
<script src="https://unpkg.com/feather-icons"></script>
<link href="~/css/weathercard.css" rel="stylesheet" />
<link href="~/css/searchbar.css" rel="stylesheet" />

<div>
    <video autoplay loop muted plays-inline class="back-video">
        <source src="~/videos/yt5s.io-4k%20uhd%20flying%20above%20clouds%20live%20wallpaper-(1080p).mp4" type="video/mp4" />
    </video>

    <div class="text-center">
        <h1 class="display-4">Notiflex</h1>
    </div>

    <form method="post">
        <div class="container">
            <input asp-for="@value" type="text" type="text" class="input" placeholder="Search">
            <div class="close-btn">&times;</div>
        </div>
    </form>
</div>

<div class="replace"></div>
@if (Model != null && Model.Count > 0 && Model.First().Avalable)
{
    <div class="containerr">
        <div class="weather-side">
            <div class="weather-gradient"></div>
            <div class="date-container">
                <h2 class="date-dayname">Tuesday</h2><span class="date-day">15 Jan 2019</span><i class="location-icon" data-feather="map-pin"></i><span class="location">@Model.First().Name, @Model.First().Country</span>
            </div>
            <div class="weather-container">
                <i class="weather-icon" data-feather="sun"></i>
                <h1 class="weather-temp">@Model.First().Temp</h1>
                <h3 class="weather-desc">@Model.First().Weather</h3>
            </div>
        </div>
        <div class="info-side">
            <div class="today-info-container">
                <div class="today-info">
                    <div class="precipitation">
                        <span class="title">PRESSURE</span><span class="value">@Model.First().Pressure</span>
                        <div class="clear"></div>
                    </div>
                    <div class="humidity">
                        <span class="title">HUMIDITY</span><span class="value">@Model.First().Humidity %</span>
                        <div class="clear"></div>
                    </div>
                    <div class="wind">
                        <span class="title">WIND</span><span class="value">@Model.First().Speed km/h</span>
                        <div class="clear"></div>
                    </div>
                </div>
            </div>
            <div class="week-container">
                <ul class="week-list">
                    <li><i class="day-icon" data-feather="sun"></i><span class="day-name">Tue</span><span class="day-temp">@Model[1].Temp</span></li>
                    <li><i class="day-icon" data-feather="cloud"></i><span class="day-name">Wed</span><span class="day-temp">@Model[2].Temp</span></li>
                    <li><i class="day-icon" data-feather="cloud-snow"></i><span class="day-name">Thu</span><span class="day-temp">@Model[3].Temp</span></li>
                    <li><i class="day-icon" data-feather="cloud-rain"></i><span class="day-name">Fry</span><span class="day-temp">@Model[4].Temp</span></li>
                </ul>
            </div>
            @*  <div class="location-container">
        <button class="location-button"> <i data-feather="map-pin"></i><span>Change location</span></button>
        </div>*@
        </div>
    </div>
}




<script>
    $(".input").focus(function () {
        $(".close-btn").addClass("active");
    });

    $(".input").focusout(function () {
        $(".close-btn").removeClass("active");
        $(this).val("");
    });
</script>