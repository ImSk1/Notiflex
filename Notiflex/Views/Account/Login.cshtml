@using Notiflex.ViewModels;
@model LoginViewModel

@{
    ViewData["Title"] = "Log in";
}
<link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet">

<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

<link rel="stylesheet" href="~/css/login.css">


<section class="ftco-section">
	<div class="container">		
		<div class="row justify-content-center">
			<div class="col-md-7 col-lg-5">
				<div class="wrap">
					@*<div class="img"></div>*@
					<div class="login-wrap p-4 p-md-5">
						<div class="d-flex">
							<div class="w-100">
								<h3 class="mb-4">Log In</h3>
							</div>
							
						</div>
						<form id="account" method="post" class="signin-form">
							<div class="form-group mt-3">
								<input type="text" asp-for=@Model.Email class="form-control" autocomplete="on" placeholder="Username" area-required="true">
								<span asp-validation-for="@Model.Email" class="text-danger"></span>
							</div>
							<div class="form-group">
								<input id="password-field" asp-for=@Model.Password class="form-control" autocomplete="on" placeholder="Password" area-required="true">
								<span asp-validation-for="@Model.Password" class="text-danger"></span>

							</div>
							<div class="form-group">
								<button type="submit" class="form-control btn btn-primary rounded submit px-3">Log In</button>
							</div>
							@*<div class="form-group d-md-flex">
								
								<div class="text-md-end">
									<a href="#">Forgot Password?</a>
								</div>
							</div>*@
						</form>
						<p class="text-center">Not a member? <a data-toggle="tab" href="@Url.Action("Register", "Account")">Sign Up</a></p>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>

<script src="js/jquery.min.js"></script>
<script src="js/bootstrap.min.js"></script>
