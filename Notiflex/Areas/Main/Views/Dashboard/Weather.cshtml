@using Notiflex.ViewModels;
@model List<WeatherCardViewModel>
@{
    string value = string.Empty;
}
<link href="~/css/chain/animated.css" rel="stylesheet" />
<link href="~/css/chain/owl.css" rel="stylesheet" />
<link href="~/css/searchbar.css" rel="stylesheet" />
<form method="post">
    <div id="tochange" class="box">
        <input id="tochange" asp-for="@value" type="text" type="text" class="input" placeholder="Search">
        <button id="searchBtn" onclick="Transform()" class="btn" type="submit"><i><img src="~/images/search.svg" /></i></button>
    </div>
</form>

@if (Model != null && Model.First().Avalable)
{
    <div class="dashboardContainer wow slideInRight" data-wow-duration="0.75s" data-wow-delay="0s">
        <partial name="_DashboardWeatherCardPartial" model="@Model"></partial>
    </div>
}


<script src="~/js/chain/owl-carousel.js"></script>
<script src="~/js/chain/animation.js"></script>
<script src="~/js/chain/custom.js"></script>